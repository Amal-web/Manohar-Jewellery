generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model bills {
  id  Int @id @default(autoincrement())
  bill_number String @unique 
  created_at DateTime
  billItems bill_items[]
}

model bill_items {
  id Int @id @default(autoincrement())
  bill_number String 
  product_id Int
  created_at DateTime
  bill bills @relation(fields: [bill_number],references: [bill_number])
  productInfo product_info @relation(fields: [product_id],references: [id])
}

model product_info {
  id Int @id @default(autoincrement())
  tag_number String 
  before_weight Float
  after_weight Float
  difference Float
  adjustment Float
  final_weight Float
  product_number String @unique
  created_at DateTime?
  updated_at DateTime?
  productBills bill_items[]
}

